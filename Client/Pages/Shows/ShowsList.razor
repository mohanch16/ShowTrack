@page "/shows"
@using ShowTrack.Shared.Models
@using ShowTrack.Components.Common
@inject HttpClient Http

@namespace ShowTrack.Components.Shows

@if (shows == null)
{
    <p><em>Loading...</em></p>
}
else
{ 
    <div class="search-bar mb-4 d-flex align-items-center">
        <input type="text"  
            class="form-control" 
            @bind-value="@searchString" 
            @bind-value:event="oninput" 
            placeholder="Search for shows.."  />

        <button class="btn btn-secondary ms-2" @onclick="SearchShows">Search</button>
    </div>

    <Filters></Filters>

    <div class="d-flex flex-wrap gap-3 mb-4">
        @foreach (var show in shows)
        {
            <ShowListItem show="@show" />
        }
    </div>
